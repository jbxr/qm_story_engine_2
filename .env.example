# QuantumMateria Story Engine Environment Configuration

# Database Configuration (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# OpenAI Configuration (for embeddings and LLM features)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Alternative LLM Configuration (Groq)
GROQ_API_KEY=gsk_your-groq-api-key-here
GROQ_MODEL=llama-3.1-70b-versatile

# Application Configuration
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO
API_PREFIX=/api/v1

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true

# Security Configuration
SECRET_KEY=your-secret-key-for-session-management
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Performance Configuration
MAX_EMBEDDING_BATCH_SIZE=100
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=1000

# Feature Flags
ENABLE_LLM_FEATURES=true
ENABLE_SEMANTIC_SEARCH=true
ENABLE_KNOWLEDGE_SNAPSHOTS=true